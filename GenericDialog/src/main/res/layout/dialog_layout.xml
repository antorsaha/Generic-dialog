<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/dialog_background"
        app:cardCornerRadius="13dp"
        app:elevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/g_title_txt_bg"
                android:gravity="center"
                android:paddingVertical="7dp"
                android:textColor="@color/g_title_txt"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Hello World" />

            <ImageView
                android:id="@+id/iv_dialog_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="13dp"
                tools:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_dialog_body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:textAlignment="center"
                android:paddingVertical="8dp"
                android:textColor="@color/g_body_text"
                android:textSize="17sp"
                tools:text="You Have to Purchase This MockTest!" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/btn_negative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_transparent_bg"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:textColor="@color/g_negative_btn_txt"
                    tools:text="Hello World" />

                <TextView
                    android:id="@+id/btn_positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:textColor="@color/g_positive_btn_txt"
                    tools:text="Purchase Now" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>